<bv:BaseView x:Class="MiniKartoteka.Presentation.Controls.ToolbarMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MiniKartoteka.Presentation.Controls"
             xmlns:bv="clr-namespace:MiniKartoteka.Presentation.Mvvm"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UniformGrid Background="Red" Columns="1">
        <Button Margin="3" Content="{Binding MenuName}" Command="{Binding ActivateViewCommand}"/>
    </UniformGrid>
</bv:BaseView>
